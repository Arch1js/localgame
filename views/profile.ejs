<!doctype html>
<html ng-app="gameApp">
<head>
	<title>My Games</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<link href="/css/profile.css" rel="stylesheet" type="text/css">
	<link href="/css/navbar.css" rel="stylesheet" type="text/css">
	<link href="/css/heart_animation.css" rel="stylesheet" type="text/css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.3/toastr.min.css">

	<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
	<script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.11/angular.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.5.8/angular-route.js"></script>
	<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
	<script src="//cdn.jsdelivr.net/jdenticon/1.3.2/jdenticon.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap3-dialog/1.34.5/js/bootstrap-dialog.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.3/toastr.min.js"></script>

	<script src="js/controller/profileCtrl.js"></script> <!-- load up our controller -->
	<script src="js/services/profileService.js"></script> <!-- load our game service -->
	<script src="js/services/jdenticonService.js"></script> <!-- load our game service -->
	<script src="/js/profileCore.js"></script> <!-- load our main application -->
	<script src="/js/directive.js"></script>
	<script src="/js/controller/headerCtrl.js"></script>

</head>
<body ng-controller="profileCtrl" ng-init="displayGames()">
	<div navbar></div> <!--navbar directive-->
	<main>
		<div class="col col-md-10 col-sm-12 col-xs-12 content">
			<div id="profile" class="col col-md-12 col-sm-12 col-xs-12">
				<div class="col-md-1 col-sm-2 col-xs-5">
					<canvas id="userIdenticon" width="80" height="80" />
				</div>
				<div id="username" class="col col-md-3 col-sm-8 col-xs-5">
					<b><h2>{{username}}</h2><b>
				</div>
			</div>
			<div class="col col-md-12 col-sm-12 col-xs-12">
				<div tabs></div>
				<div loading></div>
		</div>
	</div>
	<div footer></div>
</body>
</html>
