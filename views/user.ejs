<!doctype html>
<html ng-app="gameApp">
<head>
	<title>User</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<link href="/css/navbar.css" rel="stylesheet" type="text/css">
	<link href="/css/user.css" rel="stylesheet" type="text/css">
	<link href="/css/heart_animation.css" rel="stylesheet" type="text/css">

	<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
	<script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.11/angular.js"></script>
	<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
	<script src="//cdn.jsdelivr.net/jdenticon/1.3.2/jdenticon.min.js"></script>

	<script src="/js/controller/userCtrl.js"></script> <!-- load up our controller -->
	<script src="/js/services/userService.js"></script> <!-- load our game service -->
	<script src="/js/services/jdenticonService.js"></script> <!-- load our game service -->
	<script src="/js/userCore.js"></script> <!-- load our main application -->
	<script src="/js/directive.js"></script>

</head>
<body ng-controller="userCtrl">
	<div navbar></div>
<main>
	<div id="profile" class="col col-md-8 col-md-offset-2">
		<div class="col-md-1">
			<canvas id="userIdenticon" width="80" height="80" />
		</div>
		<div id="info" class="col-md-2">
			<p><b>Username:</b> {{user}}</p>
		</div>
	</div>
    <div class="content">
			<div class="col-md-12 centerBlock">
				<div class="">
					<form class="form-inline" role="form">
						<div class="form-group col-sm-10 col-md-4 col-md-offset-4 col-xs-9">

						</div>
					</form>
				</div>
			</div>
			<div class="container">
				<div class="masonary-row row">
						<div ng-repeat="i in games">
							<div class="col-xs-6 col-sm-6 col-lg-3">
								<div class="thumbnail ">
									<div class="circle" ng-click="removeGame(i); disable = !disable">
										<i ng-class="disable ? 'fa fa-plus' : 'fa fa-check'"></i>
									</div>
									<img src="http://res.cloudinary.com/igdb/image/upload/t_cover_big_2x/{{i.cover}}" onerror="if (this.src != 'error.jpg') this.src = 'http://www.omgchrome.com/wp-content/uploads/2015/06/chrome-trex-dinosaur.jpg'">
								<div class="caption">
									<h4>{{i.name}}</h4>
									<p class="flex-text text-muted"></p>
								</div>
							</div>

					</div>
				</div>
			</div>
		</div>
     </div>
		 <footer>
		 		<div class="text-center">
		 			Made with <span class="entypo-heart"> by Me</span>
		 		</div>
		 	</footer>
</body>
</html>
