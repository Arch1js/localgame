<!doctype html>
<html ng-app="gameApp">
<head>
	<title>User</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
	<link href="/css/navbar.css" rel="stylesheet" type="text/css">
	<link href="/css/user.css" rel="stylesheet" type="text/css">
	<link href="/css/heart_animation.css" rel="stylesheet" type="text/css">

	<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
	<script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.11/angular.js"></script>
	<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
	<script src="//cdn.jsdelivr.net/jdenticon/1.3.2/jdenticon.min.js"></script>

	<script src="/js/controller/userCtrl.js"></script> <!-- load up our controller -->
	<script src="/js/services/userService.js"></script> <!-- load our game service -->
	<script src="/js/services/jdenticonService.js"></script> <!-- load our game service -->
	<script src="/js/userCore.js"></script> <!-- load our main application -->
	<script src="/js/directive.js"></script>

</head>
<body ng-controller="userCtrl">
	<div navbar></div>
	<main>
		<div class="content">
			<div id="profile" class="col col-md-12 col-xs-12 col-sm-12">
				<div class="col-md-1 col-sm-3 col-xs-3">
					<canvas id="userIdenticon" width="80" height="80" />
				</div>
				<div id="username" class="col col-md-3 col-sm-3 col-xs-6">
					<b><h2>{{user}}</h2><b>
				</div>
				<div id="request" class="col col-md-2 col-sm-3 col-xs-5 col-sm-offset-3 col-md-offset-5">
					<button id="friend" ng-show="friend_btn" type="submit" ng-class="sent? 'btn btn-success' : 'btn btn-primary'" ng-click="sendFriendRequest(); sent = !sent">
						<span ng-hide="sent"><i class="fa fa-plus" aria-hidden="true"></i> Send friend request</span>
						<span ng-show="sent"><i class="fa fa-check" aria-hidden="true"></i> Request sent</span>
					</button>
					<button id="friend" ng-show="friend_btn_positive" type="submit" class="btn btn-success"><i class="fa fa-check" aria-hidden="true"></i> Friend</button>
				</div>
			</div>
			<div class="col col-md-12 col-sm-12 col-xs-12">
				<div class="masonary-row row cards">
						<div ng-repeat="i in games">
							<div class="col-xs-6 col-sm-6 col-md-6 col-lg-3">
								<div class="thumbnail ">
									<button ng-class="change? 'btn btn-success trade' : 'btn btn-primary trade'" ng-click="sendGameRequest(i); change = !change; send_button = true" ng-disabled="send_button">
										<span ng-hide="change"><i class="fa fa-star" aria-hidden="true"></i> Trade</span>
										<span ng-show="change"><i class="fa fa-check" aria-hidden="true"></i> Sent</span></button>
									<img src="https://res.cloudinary.com/igdb/image/upload/t_cover_big_2x/{{i.cover}}" onerror="if (this.src != 'error.jpg') this.src = 'http://www.omgchrome.com/wp-content/uploads/2015/06/chrome-trex-dinosaur.jpg'">
								<div class="caption">
									<h4>{{i.name}}</h4>
									<p class="flex-text text-muted"></p>
								</div>
							</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div footer></div>
</body>
</html>
